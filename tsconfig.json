{
  "compilerOptions": {
    "lib": [
      "ESNext"
    ],
    "module": "esnext",
    "target": "esnext",
    // "bun-types" is the important part
    "types": [
      "bun-types"
    ],
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "src",
    "outDir": "./dist",
    "paths": {
      "#/*": [
        "*"
      ],
      "#interfaces/*": [
        "interfaces/*"
      ],
      "#providers/*": [
        "providers/*"
      ],
      "#routes/*": [
        "routes/*"
      ],
      "#utils/*": [
        "utils/*"
      ],
    },
  }
}
